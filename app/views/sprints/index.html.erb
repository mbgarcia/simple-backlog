<% content_for :title do %>
  <%= "Sprints" %>
<% end %>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Number</th>
      <th>Started on</th>
      <th>Finished on</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.number %></td>
        <td><%= sprint.started_on %></td>
        <td><%= sprint.finished_on %></td>
        <td><%= sprint.team.name %></td>
        <td><%= link_to 'Show', sprint %></td>
        <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
        <td><%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sprint', new_sprint_path %>
