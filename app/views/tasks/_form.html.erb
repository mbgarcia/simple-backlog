<%= form_for(@task) do |f| %>
	<% if @task.errors.any? %>
	<div class="alert alert-danger">
		<ul>
			<% @task.errors.full_messages.each do |message| %>
			<li><%= raw message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="col-sm-4">
		<div class="form-group">
			<%= f.label :mantis, class: "control-label" %>
			<%= f.text_field :mantis, class: "form-control" %>
		</div>
	</div>
	<div class="col-sm-4">
		<div class="form-group">
			<%= f.label :task_type, class: "control-label" %>
			<%= f.select :task_type, Task::TASK_TYPES, {prompt: "Escolha"}, class: "form-control "%>
		</div>
	</div>
	<div class="col-sm-4">
		<div class="form-group">
			<%= f.label :status, class: "control-label" %>
			<%= f.select :status, Task::STATUS, {prompt: "Escolha"}, class: "form-control "%>
		</div>
	</div>
	<div class="col-sm-12">
		<div class="form-group">
			<%= f.label :description, class: "control-label" %>
			<%= f.text_field :description, class: "form-control" %>
		</div>
	</div>
	<div class="actions">
		<%= f.submit class: "btn btn-primary" %>
	</div>
<% end %>
