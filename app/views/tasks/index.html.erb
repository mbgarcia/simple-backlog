<% content_for :title do %>
  <%= "Tarefas" %>
<% end %>

<table  class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Mantis</th>
      <th>Type</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.mantis, "http://intranet.sefa.pa.gov.br/mantis/view.php?id=#{task.mantis}",
                  target: "_blank" %></td>
        <td><%= task.task_type %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= show_link task %></td>
        <td><%= edit_link edit_task_path(task) %></td>
        <td><%= delete_link task %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
