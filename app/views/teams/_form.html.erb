<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @team.errors.full_messages.each do |message| %>
      <li><%= raw message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
